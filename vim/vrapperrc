scriptencoding utf-8
runtime bundle/vim-pathogen/autoload/pathogen.vim

filetype on
filetype plugin on
syntax on

set autoindent
set wildmenu
set mouse=a
set backspace=2

set ignorecase
set smartcase

set incsearch
set hlsearch
set ruler
"auto load files
:set autoread

let localleader = ','
inoremap jj <Esc>

" set ; to : in command mode
noremap : ;
noremap! : ;
noremap ; :
noremap! ; :
iunmap :
iunmap ;

" Spaces instead of tab character
set expandtab
set smarttab
set shiftwidth=4
set softtabstop=4

" For wrapped lines
set nowrap
set showbreak=â•š
set linebreak nolist

"ca stands for command abbreviations
"always save all
ca w wa
ca W w
ca q1 q!
